<Div Flex="Flex.JustifyContent.Start">
    <Span > @Title</Span>
    <Span Margin="Margin.Is1.FromEnd.Is1.FromStart">@Separator</Span>
    <Span>@Value</Span>
</Div>

@code {

    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string Value { get; set; } = "";

    [Parameter]
    public string Separator { get; set; } = ":";


}